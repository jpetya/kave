<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
 
<struts-config>

 	<form-beans>
	   <form-bean name="loginForm" type="petshop.login.LoginForm"/>
	   <form-bean name="employeeForm" type="petshop.EmployeeForm"/>
	</form-beans>
	
    <action-mappings>
        <action input="/pages/login.jsp" name="loginForm" path="/login" type="petshop.login.LoginAction">
            <forward name="success" path="/pages/error.jsp" />
        </action>
        <action input="/pages/employee.jsp" name="employeeForm" path="/employee" type="petshop.EmployeeAction">
            <forward name="success" path="/pages/error.jsp" />
        </action>
    </action-mappings>
    
    <message-resources parameter="petshop.EmployeeResource" />
 
</struts-config>
